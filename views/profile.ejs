<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header">
                个人设置 - <%= user.username %>
            </div>
            <div class="card-body">
                <form action="/profile" method="POST">
                    <div class="mb-3">
                        <label class="form-label">用户组权限</label>
                        <input type="text" class="form-control" value="<%= user.role %>" disabled readonly>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">个性签名 (Bio)</label>
                        <textarea name="bio" class="form-control" rows="3"><%= user.bio || '' %></textarea>
                    </div>

                    <hr>
                    
                    <div class="mb-3">
                        <label class="form-label text-danger">修改密码 (留空则不修改)</label>
                        <input type="password" name="password" class="form-control" placeholder="新密码">
                    </div>

                    <div class="d-grid">
                        <button class="btn btn-primary">保存修改</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
